            try {
                const res = await fetch('/status');
                const data = await res.json();
                if (data.ok && (data.isConnected || data.qrData)) {
                    location.reload();
                }
            } catch (e) {
                console.error('Status check error:', e);
            }
        }
*/
async function refreshStatus() {
            try {
                const res = await fetch('/status', {
                    headers: { 'Accept': 'application/json' } // Memberitahu server kita minta JSON
                });

                // --- LOGIKA BARU UNTUK AUTO LOGOUT ---
                // Jika server merespon 401 (Unauthorized) atau url berubah jadi login
                if (res.status === 401 || res.redirected || res.url.includes('login')) {
                    console.log('Session expired, reloading...');
                    window.location.reload(); // Ini akan menendang user ke halaman Login
                    return;
                }
                // -------------------------------------

                const data = await res.json();

                // Cek jika status berubah jadi connected, baru reload
                // (Opsional: logic asli Anda tetap dipertahankan di sini)
                if (data.ok && (data.isConnected || data.qrData)) {
                     // Kita cek dulu apakah elemen QR masih ada, kalau masih ada dan status sudah connected, reload
                     const qrBox = document.querySelector('.qr-box');
                     if (data.isConnected && qrBox) {
                        location.reload();
                     }
                }
            } catch (e) {
                console.error('Status check error:', e);
                // Jika error karena parsing JSON (biasanya karena dapet HTML login), reload aja
                if (e.name === 'SyntaxError') {
                    window.location.reload();
                }
            }
        }


        // Connect form (check if exists)
        const connectForm = document.getElementById('connectForm');
        if (connectForm) {
            connectForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const phone = document.getElementById('phone').value;

                showAlert('Generating QR Code...', 'success');

                try {
                    const res = await fetch('/connect', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ phone })
                    });
                    const data = await res.json();

                    if (data.ok) {
                        showAlert('QR Code berhasil di-generate!', 'success');
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showAlert(data.error || 'Gagal generate QR Code', 'error');
                    }
                } catch (e) {
                    showAlert('Error: ' + e.message, 'error');
                }
            });
        }

        // Disconnect bot
        async function disconnectBot() {
            if (!confirm('Yakin ingin menghapus nomor ini? Session akan dihapus.')) return;

            try {
                const res = await fetch('/disconnect', { method: 'POST' });
                const data = await res.json();

                if (data.ok) {
                    showAlert('Nomor berhasil dihapus', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert('Gagal menghapus nomor', 'error');
                }
            } catch (e) {
                showAlert('Error: ' + e.message, 'error');
            }
        }

        // Change password form
        document.getElementById('changePasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                showAlert('Password baru dan konfirmasi tidak sama', 'error');
                return;
            }

            try {
                const res = await fetch('/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword })
                });
                const data = await res.json();

                if (data.ok) {
                    showAlert('Password berhasil diubah!', 'success');
                    document.getElementById('changePasswordForm').reset();
                } else {
                    showAlert(data.error || 'Gagal mengubah password', 'error');
                }
            } catch (e) {
                showAlert('Error: ' + e.message, 'error');
            }
        });

        function showAlert(message, type) {
            const alert = document.getElementById('alert');
            alert.textContent = message;
            alert.className = `alert alert-${type}`;
            alert.style.display = 'block';
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        }
    </script>
</body>
</html>
